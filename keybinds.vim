let mapleader = "!"

nnoremap bn :bn<CR>
nnoremap bv :bp<CR>
nnoremap bd :bd<CR>

nnoremap <leader>la :set nornu<CR>
nnoremap <leader>lr :set rnu<CR>

nnoremap <leader>fr :NERDTreeRefreshRoot<CR>
